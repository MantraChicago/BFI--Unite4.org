<% if flash && flash[:notice] %>
  <div class="fs-bg">
      <div class="fs-message">
        <%= flash[:notice] %>
      </div>
  </div>
<% end %>

<% if flash && flash[:alert] %>
  <div class="fs-bg">
    <div class="fs-message fs-message-alert">
      <%= flash[:alert] %>
    </div>
  </div>
<% end %>

<% if flash && flash[:error] %>
  <div class="error fs-message"><%= flash[:error] %></div>
<% end %>