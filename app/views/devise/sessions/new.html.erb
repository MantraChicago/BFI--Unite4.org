<%= render "shared/goback" %>



<div class="row blimit-top blimit cascade">
    <div class="large-12 columns cascade-single">
	<h2 class="slimit">Sign in</h2>
	  
    </div>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <div class="large-12 columns">
	<%= devise_error_messages! %>
    </div>
    
    <div class="large-6 columns">
	<div>
	    <%= f.email_field :email, :autofocus => true, :class => "animation-color cascade-single",:placeholder => "email" %>
	   
	</div>

  
    </div>
    <div class="large-6 columns">
	<div>
	    <%= f.password_field :password,:placeholder => "password", :class => "animation-color cascade-single" %>
	    
	</div>

	<div>
	    <div class="row">

		<div class="large-6 columns right text-right">

		    <%= f.submit "Sign up",:class => "animation-color button-submit cascade-single" %>
		</div>
		<div class="large-6 columns right">
		    <% if devise_mapping.rememberable? -%>
		    <div>
			<%= f.check_box :remember_me %> 
			<label for="user_remember_me">
			    <span class="animation-color"></span>Remember me
			</label>
		    </div>
		    <% end -%><%= render "devise/shared/links" %>		    
		</div>
	    </div>
	    
	</div>
    </div>
</div>
<%= render "shared/footer" %>

<% end %>

