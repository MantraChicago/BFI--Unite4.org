<%= render "shared/mainheader" %>

<div class="home-tiles-container slimit-top large-mlimit-left">
    <div class="home-tiles-group">


    <% cause= @featured_causes.pop  %>

	<div class="home-tile-single tile-4-2 nopadding" style="background-image: url(<%= cause.picture.url %>);">
	    <div class="bottom-panel">		 
		<h4 class="tertiary">FEATURED CAUSE</h4>
		<p class="arial"><%= cause.name %></p>
		<div class="tile-small-button right arial"><%= link_to "TAKE ACTION", cause%></div>
	    </div>
	</div>


	<div class="home-tile-single tile-2-2 small-height-auto">
	    <h2 class="slimit">Immediate Needs</h2>
	    <ul class="high-list">
	    	<% @recent_needs.each do |need| %>
	    		<li><%= link_to need.name, need %></li>
	    	<% end %>
		
	    </ul>
	</div>
	<div class="home-tile-single tile-2-2 small-height-auto">	     	
	    <h2 class="slimit">New Causes</h2>
	    <ul class="high-list">
		<% @new_causes.each do |cause| %>
		<li><%= link_to cause.name, cause %></li>

		<% end %>

	    </ul>
	</div>

	<% @featured_causes.each do |cause| %>

	<div class="home-tile-single tile-2-1 nopadding" style="background-image: url(<%= cause.picture.url %>);">
	    <div class="bottom-panel">		 
		<h4 class="tertiary">FEATURED CAUSE</h4>
		<p><%= cause.name %></p>
		<div class="tile-small-button right"><%= link_to "TAKE ACTION", cause%></div>
	    </div>	     
	</div>

	<% end %>

    </div>
 



</div>





<%= render "shared/mainfooter" %>